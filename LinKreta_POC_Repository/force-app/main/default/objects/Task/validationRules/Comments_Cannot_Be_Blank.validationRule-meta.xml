<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Comments_Cannot_Be_Blank</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISBLANK(Comments__c),
ISPICKVAL(Status, &apos;Completed&apos;),
Not(ISNEW())
)</errorConditionFormula>
    <errorDisplayField>Comments__c</errorDisplayField>
    <errorMessage>Add Comments First</errorMessage>
</ValidationRule>
