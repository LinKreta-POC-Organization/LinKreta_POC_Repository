<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Mandate_DS_Approval</fullName>
    <active>true</active>
    <description>This validation rule is written to mandate the user to process the DS Approval before changing the Status to &apos;Active&apos;.&apos;</description>
    <errorConditionFormula>AND(
	ISCHANGED(Status__c),
	NOT(ISPICKVAL(DS_Team_Approval_Status__c, &quot;DS Approved&quot;)),
	ISPICKVAL(Status__c, &quot;Active&quot;)		
)</errorConditionFormula>
    <errorMessage>DS Approval is required.</errorMessage>
</ValidationRule>
