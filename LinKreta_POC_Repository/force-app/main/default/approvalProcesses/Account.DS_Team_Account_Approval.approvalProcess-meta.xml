<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <submitter>DS_Team</submitter>
        <type>group</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>preetam.singh@in.gt.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>DS Team Approval</label>
        <name>DS_Team_Approval</name>
    </approvalStep>
    <emailTemplate>GT_Email_Templates/Ds_Team_Approval_Template_For_Client</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Account.RecordType</field>
            <operation>equals</operation>
            <value>Client</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.Status__c</field>
            <operation>notEqual</operation>
            <value>Inactive</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.Status__c</field>
            <operation>notEqual</operation>
            <value>Active</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Client_Active</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>DS_Team_Approval_Status_Approvedd</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>DS_Team_Approved_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Verify_DS_team</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>DS_Team_Approval_Status_Rejecte</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>DS_Team_Rejected_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Email_alert_for_DS_Rejection_on_Client</name>
            <type>Alert</type>
        </action>
        <action>
            <name>update_Assigne</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Pick</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Ds_Team_Approval_Field_Pending_with_Ds</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_Changed</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>DS Team Account Approval</label>
    <processOrder>2</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
