<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>DS_Team</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>DS_Team_Approval_Status__c</field>
        <field>Click_to_view_Client_Contact__c</field>
        <field>Assigned_to_DS_Team_Member__c</field>
        <field>Assignment_Date__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>preetam.singh@in.gt.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>DS Team Approval</label>
        <name>DS_Team_Approval</name>
    </approvalStep>
    <emailTemplate>unfiled$public/Submit_for_DS_Team_Contact_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Contact.Contact_status__c</field>
            <operation>equals</operation>
            <value>Pending DS Team Approval</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>DS_Team_Approve_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>DS_Team_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Email_alert_on_DS_Team_Approval_on_Client_Contact</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Client_Contact_Status</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>DS_Team_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>DS_Team_Rejection_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Email_alert_on_DS_Team_Rejection_on_Client_Contact</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>DS_Approval_Status_pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>DS Team Contact Approval</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
